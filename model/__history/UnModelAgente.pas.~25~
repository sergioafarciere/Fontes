unit UnModelAgente;

interface

uses SysUtils;

type TAgente = class
  private
    FID: Integer;
    FNome: string;
    FTPessoa: string;
    procedure setNome(const Value: string);
    procedure TPessoa(const Value: string);
  public
    property ID : Integer read FID write FID;
    property Nome : string read FNome write setNome;
    property TPessoa : string read FPessoa write FPessoa;
end;

implementation

{ TAgente }

procedure TAgente.setNome(const Value: string);
begin
//if Value = EmptyStr then
//  raise Exception.Create('Valor não pode ser vázio')
//else
  FNome := Value;
end;

procedure TAgente.TPessoa(const Value: string);
begin
  FTPessoa := Value;
end;

end.
